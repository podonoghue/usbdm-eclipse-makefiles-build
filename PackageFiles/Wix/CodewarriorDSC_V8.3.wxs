            <File Id='CODEWARRIOR_DSC_V8_3_CommonGDI_1'  DiskId='1' Source='bin\usbdm-gdi-dsc-legacy.4.dll'   KeyPath='yes' />
            <File Id='CODEWARRIOR_DSC_V8_3_CommonGDI_1d' DiskId='1' Source='bin\usbdm-gdi-dsc-legacy-debug.4.dll'/>
