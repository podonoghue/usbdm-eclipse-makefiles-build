            <File Id='CODEWARRIOR_DSC_V8_3_WxWidgets_1'    DiskId='1' Source='bin\wxbase$(var.WxWidgetsVer)_gcc_custom.dll' />
            <File Id='CODEWARRIOR_DSC_V8_3_WxWidgets_2'    DiskId='1' Source='bin\wxmsw$(var.WxWidgetsVer)_core_gcc_custom.dll' />

            <File Id='CODEWARRIOR_DSC_V8_3_CommonUsbdm_1'  DiskId='1' Source='bin\usbdm.4.dll'/>
            <File Id='CODEWARRIOR_DSC_V8_3_CommonUsbdm_1d' DiskId='1' Source='bin\usbdm-debug.4.dll'/>
            <File Id='CODEWARRIOR_DSC_V8_3_CommonUsbdm_2'   DiskId='1' Source='bin\usbdm-system.4.dll' />
