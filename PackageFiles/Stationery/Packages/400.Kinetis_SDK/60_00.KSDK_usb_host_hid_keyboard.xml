<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd"
[
<!ENTITY usb-include-paths  SYSTEM "includes/00_00.usb_includes.xml">
]>

<root version="1.0" >
   <!-- Freescale group-ksdk-demos -->
   <projectActionList id="demo.KSDK-usb-host-hid-keyboard" root="">
      <applyWhen>
         <and>
            <variableRef idRef="demo.KSDK-usb-host-hid-keyboard" />
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <projectActionList>
         <applyWhen>
            <and>
               <variableRef idRef="projectOptionValue.Kinetis-SDK-enable" />
               <or>
                  <variableRef idRef="projectOptionValue.Kinetis-SDK-os-bare-metal" />
                  <and>
                     <variableRef idRef="demo.KSDK-usb-with-rtos"/>
                     <or>
                        <variableRef idRef="projectOptionValue.Kinetis-SDK-os-free-rtos" />
                        <variableRef idRef="projectOptionValue.Kinetis-SDK-os-mqx" />
                        <variableRef idRef="projectOptionValue.Kinetis-SDK-os-ucosii" />
                        <variableRef idRef="projectOptionValue.Kinetis-SDK-os-ucosiii" />
                     </or>
                  </and>
               </or>
            </and>
         </applyWhen>
         <variable id="projectOptionValue.KSDK-usb-host-hid-keyboard" 
            name="USB Host HID keyboard example" 
            description="The board will transfer data from an attached USB keyboard"
            radioGroup="group-ksdk-demo" >
         </variable>
         <projectActionList>
            <applyWhen>
               <variableRef idRef="projectOptionValue.KSDK-usb-host-hid-keyboard" />
            </applyWhen>
            <deleteResource target="Sources/main.c" />
         
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/host/hid/keyboard/readme.pdf" type="link" target="doc/readme.pdf"      sourcePathType="absolute" />

            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/host/hid/keyboard/hardware_init.c"    target="board/hardware_init.c"   sourcePathType="absolute" />
         
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/host/hid/keyboard/hidkeyboard.c"      target="Sources/hidkeyboard.c"   sourcePathType="absolute" />
            <copy source="usbdm_kds_path/examples/$(demo.KDS.boardName)/demo_apps/usb/host/hid/keyboard/hidkeyboard.h"      target="Sources/hidkeyboard.h"   sourcePathType="absolute" />
            <copy source="usbdm_kds_path/platform/system/src/hwtimer/fsl_hwtimer_pit_irq.c"                                 target="Sources/fsl_hwtimer_pit_irq.c"   sourcePathType="absolute" />

            <!-- C Include paths -->
            <projectOption id="net.sourceforge.usbdm.gnu.c.compiler.option.include.paths">
               &usb-include-paths;
            </projectOption>
            
            <!-- C++ Include paths -->
            <projectOption id="net.sourceforge.usbdm.gnu.cpp.compiler.option.include.paths">
               &usb-include-paths;
            </projectOption>
            
            <!-- C Link options -->
            <projectOption id="gnu.c.link.option.other" overwrite="always">
               <value>&quot;--defsym=__ram_vector_table__=1&quot;</value>
            </projectOption>
            <!-- C++ Link options -->
            <projectOption id="gnu.cpp.link.option.other" overwrite="always">
               <value>&quot;--defsym=__ram_vector_table__=1&quot;</value>
            </projectOption>
         </projectActionList>
      </projectActionList>
   </projectActionList>
</root>
