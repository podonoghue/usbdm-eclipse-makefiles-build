<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MK22F51212 with USB derived Clock -->
   <projectActionList id="Options-file-list-MK22F512M12">
      <applyWhen>
         <and>
               <deviceSubfamilyIs>MK22F51212</deviceSubfamilyIs>
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <!-- Clock -->
      <copy source="Startup_Code/clock-MCG-MK22F512M12.c"              target="Startup_Code/clock.c"              overwrite="always" />
      <copy source="Project_Headers/clock_configure-MCG-MK22F512M12.h" target="Project_Headers/clock_configure.h" overwrite="always" />
      <!-- Console -->
      <copy source="Startup_Code/console-mk.c" target="Startup_Code/console.c"    overwrite="always" />
      <copy source="Project_Headers/console.h" target="Project_Headers/console.h" overwrite="always" />
   </projectActionList>
</root>