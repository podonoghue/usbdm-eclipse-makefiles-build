<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MKL03 -->
   <projectActionList id="Options-file-list-MKL03Z4">
      <applyWhen>
         <and>
            <deviceSubfamilyIs>MKL03Z4</deviceSubfamilyIs>
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <!-- Security with boot -->
      <copy source="Startup_Code/security-mkl-boot.c"   target="Startup_Code/security.c" overwrite="always" />
      <!-- Clock -->
      <copy source="Startup_Code/clock-MGC_Lite.c"               target="Startup_Code/clock.c"              overwrite="always" />
      <copy source="Project_Headers/clock_configure-MCG-MKL03.h" target="Project_Headers/clock_configure.h" overwrite="always" />
      <!-- Console -->
      <copy source="Startup_Code/console-mkl-lp.c" target="Startup_Code/console.c"    overwrite="always" />
      <copy source="Project_Headers/console.h"     target="Project_Headers/console.h" overwrite="always" />
   </projectActionList>
</root>