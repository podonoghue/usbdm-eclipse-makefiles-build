<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MKxxM5 -->
   <projectActionList id="Options-file-list-MKxxM5">
      <applyWhen>
         <and>
            <or>
               <deviceSubfamilyIs>MK10D5</deviceSubfamilyIs>
               <deviceSubfamilyIs>MK20D5</deviceSubfamilyIs>
               <deviceSubfamilyIs>MK21D5</deviceSubfamilyIs>
               <deviceSubfamilyIs>MK22D5</deviceSubfamilyIs>
            </or>
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <!-- Clock -->
      <copy source="Startup_Code/clock-MCG-MKxx.c"                target="Startup_Code/clock.c"              overwrite="always" />
      <copy source="Project_Headers/clock_configure-MCG-MKxxM5.h" target="Project_Headers/clock_configure.h" overwrite="always" />
      <!-- Console -->
      <copy source="Startup_Code/console-mk.c" target="Startup_Code/console.c"    overwrite="always" />
      <copy source="Project_Headers/console.h" target="Project_Headers/console.h" overwrite="always" />
   </projectActionList>
</root>