<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MKE04, MKE06 -->
   <projectActionList id="Options-file-list-MKE0xZ4">
      <applyWhen>
         <and>
            <or>
               <deviceSubfamilyIs>MKE04Z4</deviceSubfamilyIs>
               <deviceSubfamilyIs>MKE06Z4</deviceSubfamilyIs>
            </or>
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>

      <projectActionList>
         <applyWhen>
            <deviceNameIs>MKE04Z8M4</deviceNameIs>
         </applyWhen>
	 <!-- Security -->
         <copy source="Startup_Code/security-mke04z8.c"    target="Startup_Code/security.c" overwrite="always" />
      </projectActionList>
      
      <projectActionList>
         <applyWhen>
            <not><deviceNameIs>MKE04Z8M4</deviceNameIs></not>
         </applyWhen>
	 <!-- Security -->
         <copy source="Startup_Code/security-mke04.c"      target="Startup_Code/security.c" overwrite="always" />
      </projectActionList>

      <!-- Clock -->
      <copy source="Startup_Code/clock-ICS-MKE0x.c"              target="Startup_Code/clock.c"              overwrite="always" />
      <copy source="Project_Headers/clock_configure-ICS-MKE0x.h" target="Project_Headers/clock_configure.h" overwrite="always" />
      <!-- Console -->
      <copy source="Startup_Code/console-mke.c" target="Startup_Code/console.c"    overwrite="always" />
      <copy source="Project_Headers/console.h"  target="Project_Headers/console.h" overwrite="always" />

      <!-- MKE04 & MKE06 have a BME that can manipulate SRAM_U and a bit-band for SRAM_U as well -->
      <copy source="Project_Settings/Linker_Files/MemoryMap-sramu.ld" target="Project_Settings/Linker_Files/MemoryMap.ld"  overwrite="always" />

      <projectActionList>
         <applyWhen>
            <not><variableRef idRef="hasCCNature" condition="isTrue" /></not>
         </applyWhen>
         <copy source="Project_Headers/bitband-c-mke.h"    target="Project_Headers/bitband.h" />
      </projectActionList>

      <projectActionList>
         <applyWhen>
            <variableRef idRef="hasCCNature" condition="isTrue" />
         </applyWhen>
         <copy source="Project_Headers/bitband-cpp-mke.h"  target="Project_Headers/bitband.h" />
      </projectActionList>

   </projectActionList>
</root>