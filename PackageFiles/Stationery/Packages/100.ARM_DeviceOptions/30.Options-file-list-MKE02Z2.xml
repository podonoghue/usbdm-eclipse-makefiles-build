<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MKE02M2, MKE02M4  -->
   <projectActionList id="Options-file-list-MKE02Z4">
      <applyWhen>
         <and>
	    <or>
               <deviceSubfamilyIs>MKE02Z2</deviceSubfamilyIs>
	    </or>
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <!-- Clock -->
      <copy source="Startup_Code/clock-ICS-MKE0x.c"                target="Startup_Code/clock.c"              overwrite="always" />
      <copy source="Project_Headers/clock_configure-ICS-MKE02M2.h" target="Project_Headers/clock_configure.h" overwrite="always" />
      <!-- Security -->
      <copy source="Startup_Code/security-mke02.c"      target="Startup_Code/security.c"  overwrite="always" />
      <!-- Console -->
      <copy source="Startup_Code/console-mke.c" target="Startup_Code/console.c"    overwrite="always" />
      <copy source="Project_Headers/console.h"  target="Project_Headers/console.h" overwrite="always" />
   </projectActionList>
</root>