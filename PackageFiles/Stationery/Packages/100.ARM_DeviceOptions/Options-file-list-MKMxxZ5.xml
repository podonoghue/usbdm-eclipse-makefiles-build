<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MKMxx -->
   <projectActionList id="Options-file-list-MKMxxZ5">
      <applyWhen>
         <and>
            <or>
               <deviceSubfamilyIs>MKM14Z5</deviceSubfamilyIs>
               <deviceSubfamilyIs>MKM33Z5</deviceSubfamilyIs>
               <deviceSubfamilyIs>MKM34Z5</deviceSubfamilyIs>
            </or>
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <variable id="projectOptionValue.Clock-setup" 
         name="Clock setup code" 
         description="Adds code for basic clock initialization - check assumptions made"
         checkGroup="group-additional-options"/>
      <variable id="projectOptionValue.UART-setup" 
         name="UART setup code" 
         description="Adds C stdio (UART) support for newlib"          
         checkGroup="group-additional-options" >
         <enableWhen>
            <requirement idRef="projectOptionValue.Clock-setup"/>
         </enableWhen>
      </variable>
      <projectActionList>
         <applyWhen>
            <variableRef idRef="projectOptionValue.Clock-setup" />
         </applyWhen>
         <copy source="Startup_Code/clock-MKMxx.c" target="Startup_Code/clock.c" />
         <copy source="Project_Headers/clock_configure-MKMxx.h" target="Project_Headers/clock_configure.h" />
      </projectActionList>
      <projectActionList>
         <applyWhen>
            <variableRef idRef="projectOptionValue.UART-setup" />
         </applyWhen>
         <copy source="Startup_Code/uart-mkm.c" target="Startup_Code/uart.c" />
         <copy source="Project_Headers/uart.h" target="Project_Headers/uart.h" />
      </projectActionList>
   </projectActionList>
</root>