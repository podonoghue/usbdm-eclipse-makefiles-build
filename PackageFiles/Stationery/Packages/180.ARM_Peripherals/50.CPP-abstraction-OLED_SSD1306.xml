<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0" >
   <projectActionList id="CPP-abstraction-OLED-SSD1306" >
      <applyWhen>
         <and>
            <or>
               <deviceFamilyMatches>CortexM0</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM0plus</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM4</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM4F</deviceFamilyMatches>
            </or>
            <variableRef idRef="cpp.peripheral.internal.i2c" />
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <projectActionList>
         <applyWhen>
            <variableRef idRef="projectOptionValue.CPP-abstraction" condition="isTrue"/>
         </applyWhen>
         <variable id="projectOptionValue.CPP-abstraction-OLED-SSD1306"
            name="SSD1306 based OLED interface"
            description="Adds a CPP abstraction layer for a SSD1306 OLED"
            checkGroup="group-i2c-peripheral-options" >
         </variable>

         <!-- OLED CPP abstraction layer -->
         <projectActionList>
            <projectActionList>
               <applyWhen >
                  <variableRef idRef="projectOptionValue.CPP-abstraction-OLED-SSD1306" />
               </applyWhen>
               <copy source="Fonts"                                     target="Fonts"                                     overwrite="always"/>
               <copy source="Snippets/fonts.h"                          target="Sources/fonts.h"                           overwrite="always"/>
               <copy source="Snippets/FrameBuffer.h"                    target="Sources/FrameBuffer.h"                     overwrite="always"/>
               <copy source="Snippets/oled-example-SSD1306.cpp"         target="Sources/oled-example-SSD1306.cpp"          overwrite="always" />
               <copy source="Snippets/oled_SSD1306.h"                   target="Sources/oled_SSD1306.h"                    overwrite="always" />
               <excludeSourceFile target="Sources/oled-example-SSD1306.cpp"  />
               <excludeSourceFile target="Sources/oled_SSD1306.cpp" />
               <projectOption id="net.sourceforge.usbdm.gnu.c.compiler.option.preprocessor.def.symbols">
                  <value>OLED_AVAILABLE</value>
               </projectOption>
               <projectOption id="net.sourceforge.usbdm.gnu.cpp.compiler.option.preprocessor.def.symbols">
                  <value>OLED_AVAILABLE</value>
               </projectOption>
            </projectActionList>
         </projectActionList>
      </projectActionList>
    </projectActionList>
</root>
