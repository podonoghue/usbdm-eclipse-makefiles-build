<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0" >
   <projectActionList id="CPP-abstraction-EPAPER" >
      <applyWhen>
         <and>
            <or>
               <deviceFamilyMatches>CortexM0</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM0plus</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM4</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM4F</deviceFamilyMatches>
            </or>
            <variableRef idRef="cpp.peripheral.internal.spi" />
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <projectActionList>
         <applyWhen>
         <and>
            <variableRef idRef="projectOptionValue.CPP-abstraction" condition="isTrue"/>
         </and>
         </applyWhen>
         <variable id="projectOptionValue.CPP-abstraction-EPAPER"
            name="e-Paper C++ interface"
            description="Adds a CPP abstraction layer for Seeed Studio e-Paper displays"
            checkGroup="group-spi-peripheral-options" >
         </variable>

         <!-- LCD CPP abstraction layer -->
         <projectActionList>
            <projectActionList>
               <applyWhen >
                  <variableRef idRef="projectOptionValue.CPP-abstraction-EPAPER" />
               </applyWhen>
               <copy source="Fonts"                                     target="Fonts"                                     overwrite="true"/>
               <copy source="Snippets/fonts.h"                          target="Sources/fonts.h"                           overwrite="true"/>
               <copy source="Snippets/seeed-epaper-example.cpp"     target="Snippets/seeed-epaper-example.cpp" overwrite="true"/>
               <copy source="Snippets/epaper.h"                     target="Snippets/epaper.h"                 overwrite="true"/>
               <copy source="Snippets/epd.h"                        target="Snippets/epd.h"                    overwrite="true"/>
               <copy source="Snippets/seeed_sld00200p.h"            target="Snippets/seeed_sld00200p.h"        overwrite="true"/>
               <copy source="Snippets/gt20l16.h"                    target="Snippets/gt20l16.h"                overwrite="true"/>
               <copy source="Snippets/epaper.cpp"                   target="Snippets/epaper.cpp"               overwrite="true"/>
               <copy source="Snippets/epd.cpp"                      target="Snippets/epd.cpp"                  overwrite="true"/>
               <copy source="Snippets/gt20l16.cpp"                  target="Snippets/gt20l16.cpp"              overwrite="true"/>
               <projectOption id="net.sourceforge.usbdm.gnu.c.compiler.option.preprocessor.def.symbols">
                  <value>EPAPER_AVAILABLE</value>
               </projectOption>
               <projectOption id="net.sourceforge.usbdm.gnu.cpp.compiler.option.preprocessor.def.symbols">
                  <value>EPAPER_AVAILABLE</value>
               </projectOption>
            </projectActionList>
         </projectActionList>
      </projectActionList>
    </projectActionList>
</root>
