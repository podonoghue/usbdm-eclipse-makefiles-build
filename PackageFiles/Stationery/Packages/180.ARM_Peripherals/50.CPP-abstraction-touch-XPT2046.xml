<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0" >
   <projectActionList id="CPP-abstraction-Touch-XPT2046" >
      <applyWhen>
         <and>
            <or>
               <deviceFamilyMatches>CortexM0</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM0plus</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM4</deviceFamilyMatches>
               <deviceFamilyMatches>CortexM4F</deviceFamilyMatches>
            </or>
            <variableRef idRef="cpp.peripheral.internal.spi" />
            <variableRef idRef="outputType" condition="matches" value=".*ProjectType\.exe$" />
         </and>
      </applyWhen>
      <projectActionList>
         <applyWhen>
            <variableRef idRef="projectOptionValue.CPP-abstraction" condition="isTrue"/>
         </applyWhen>
         <variable id="projectOptionValue.CPP-abstraction-Touch-XPT2046"
            name='XPT2046 based Touch interface'
            description="Adds a CPP abstraction layer for an XPT2046 resistive touch panel"
            checkGroup="group-spi-peripheral-options" >
         </variable>

         <!-- LCD CPP abstraction layer -->
         <projectActionList>
            <projectActionList>
               <applyWhen >
                  <variableRef idRef="projectOptionValue.CPP-abstraction-Touch-XPT2046" />
               </applyWhen>
               <copy source="Fonts"                               target="Fonts"                               overwrite="always"/>
               <copy source="Snippets/fonts.h"                    target="Sources/fonts.h"                     overwrite="always"/>
               <copy source="Snippets/touch_XPT2046.h"            target="Sources/touch_XPT2046.h"             overwrite="always"/>
               <copy source="Snippets/touch-example-XPT2046.cpp"  target="Sources/touch-example-XPT2046.cpp"   overwrite="always"/>
               <excludeSourceFile target="Sources/touch-example-XPT2046.cpp"  />
               <projectOption id="net.sourceforge.usbdm.gnu.c.compiler.option.preprocessor.def.symbols">
                  <value>EPAPER_AVAILABLE</value>
               </projectOption>
               <projectOption id="net.sourceforge.usbdm.gnu.cpp.compiler.option.preprocessor.def.symbols">
                  <value>EPAPER_AVAILABLE</value>
               </projectOption>
            </projectActionList>
         </projectActionList>
      </projectActionList>
    </projectActionList>
</root>
