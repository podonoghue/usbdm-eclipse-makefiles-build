<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE peripheralPage SYSTEM "_menu.dtd" >
<!-- i2s_def.xml -->

<peripheralPage xmlns:xi="http://www.w3.org/2001/XInclude" name="_instance" description="Inter-Integrated-Circuit">

   <xi:include href="_default_instance.xml"/>

   <xi:include href="_mapPinsOption_on.xml"/>

   <aliasOption key="/SIM/system_bus_clock[]" />

   <stringOption key="irq_pattern"        constant="true" value="^I2S%i_?(Rx|Tx)?$" hidden="true" />
   <stringOption key="irq_classHandler"   constant="true" value="%c%i::irqHandler" hidden="true" />
   <xi:include href="_irqOptionSubstituted.xml"/>
   <projectActionList id = "i2s_files" >
      <copy source="Project_Headers/i2s.h"            target="Project_Headers/i2s.h"            overwrite="true"  derived="true" />
   </projectActionList>

   <template key="/I2S/declarations" namespace="all"  ><![CDATA[
   \t/**
   \t * Class representing $(_name)
   \t */
   \tusing $(_class) = $(_base_class)Base_T<$(_class)Info>;\n
   ]]></template>

   <xi:include href="_clockOption.xml"/>

   <signals/>

   <validate class="net.sourceforge.usbdm.deviceEditor.validators.PeripheralValidator" />

</peripheralPage>
