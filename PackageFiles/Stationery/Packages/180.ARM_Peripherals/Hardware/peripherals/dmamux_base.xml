      \t   constexpr Init(DmaChannelNum dmaChannelNum, Types... rest) : Init(rest...) {
      \t
      \t      channelNum = dmaChannelNum;
      \t   }
      \t\n
   ]]>
   </template>

   <variableTemplate where="basicInfo" codeGenCondition="/$(_STRUCTNAME)/generateSharedInfo"
      variables="dma_low_channel_num,dmamux_chcfg_low_source[]"
      nonDefaultParams="2"
      linePadding="xxx" >
   <![CDATA[
      \t   /**
      \t    * Constructor for Dma ChannelNum
      \t    *
      \t    * @tparam   Types
      \t    * @param    rest
      \t    *
      %paramDescription
      \t    */
