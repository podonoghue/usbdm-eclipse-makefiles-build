   <setTemplate namespace="usbdm" codeGenCondition="/$(_BASENAME)/enablePeripheralSupport"
      variables="kbi_pe_kbipe,kbi_es_kbedg"
      params="enableMask,polarity"
      linePadding="xxx" >
   <![CDATA[
      \t   /**
      \t    * Constructor for Input with polarity selection
      \t    *
      \t    * @tparam   Types
      \t    * @param    rest
      \t    *
      \t    * @param    kbiInputNum Number of KBI input to enable
      \t    * @param    polarity    Polarity of the input
      \t    */
      \t   template <typename... Types>
      \t   constexpr Init(PinNum kbiInputNum, Polarity polarity, Types... rest) : Init(rest...) {
      \t
      \t      %registerName0 |= (1<<kbiInputNum);
      \t      %registerName1 |= (((polarity==ActiveHigh)?1:0)<<kbiInputNum);
      \t   }
      \t\n
   ]]>
   </setTemplate>

