<?xml version="1.0" encoding="UTF-8"?>

<!-- all templates -->    
<!ENTITY % template_items   "template|variableTemplate|clockCodeTemplate" >

<!-- High level items-->
<!ENTITY % structure_items  "xi:include|section|list" >

<!-- Drawing elements with a Graphic -->
<!ENTITY % graphic_items    "graphicGroup|graphicBox|graphicItem|equation|for|if" >

<!-- Dialogue elements -->
<!ENTITY % dialogue_items    "timeOption|intOption|floatOption|stringOption|binaryOption|choiceOption|bitmaskOption" >

<!-- Simple items that don't recurse -->
<!ENTITY % simple_items     "xi:include|printVar|
                              deleteVariables|projectActionList|
                              title|constant|signals|variable|
                              rtcTimeOption|timeOption|intOption|floatOption|stringOption|binaryOption|choiceOption|bitmaskOption|irqOption|pinListOption|aliasOption|pinMapOption|
                              clockSelectionOption|validate|equation|
                              %template_items;" >
                  
<!ENTITY % general_items    "dynamicSignalMapping|dialogue|graphic|category|categoryOption|aliasCategoryOption|if|for|%simple_items;" >

<!ELEMENT dialogue (%dialogue_items;)*>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST dialogue condition     CDATA        #IMPLIED>

<!-- Include another file -->
<!ELEMENT xi:include EMPTY>
   <!ATTLIST xi:include href      CDATA        #REQUIRED>

<!-- Root fileElement -->
<!ELEMENT peripheralPage ((%structure_items;|%general_items;)*) >
   <!ATTLIST peripheralPage xmlns:xi     CDATA        #IMPLIED>
   <!ATTLIST peripheralPage name         CDATA        #REQUIRED>
   <!ATTLIST peripheralPage description  CDATA        #REQUIRED>
   <!ATTLIST peripheralPage toolTip      CDATA        #IMPLIED>

<!ELEMENT fragment ((%structure_items;|%general_items;)*)  >
   <!ATTLIST fragment xmlns:xi CDATA #IMPLIED>

<!ELEMENT list ((%structure_items;|%general_items;)*) >
   <!-- Name for variable associated with list -->
   <!ATTLIST list name         CDATA        #IMPLIED>
   <!-- Key for option - also used as visible name if not provided -->
   <!ATTLIST list key          CDATA        #IMPLIED>
   <!-- Description for variable associated with list -->
   <!ATTLIST list description  CDATA        #IMPLIED>
   <!-- Dynamic expression that disables and hides this list -->
   <!ATTLIST list hiddenBy     CDATA        #IMPLIED>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST list condition    CDATA        #IMPLIED>

<!ELEMENT section ((%structure_items;|%general_items;)*) >
   <!ATTLIST section name         CDATA        #IMPLIED>

<!ELEMENT for (%general_items;|%structure_items;|%general_items;|%graphic_items;|break|continue)* >
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST for condition           CDATA        #IMPLIED>
   <!-- Substitution keys separated by ':'' -->
   <!ATTLIST for keys                 CDATA        #REQUIRED>
   <!-- Values for each key separated by ':'', each iteration separated by ';' -->
   <!ATTLIST for values               CDATA        #IMPLIED>
   <!-- Delimiter to use to separate keys / iteration values??? -->
   <!ATTLIST for delimiter            CDATA        #IMPLIED>
   <!-- For simple iterated list. Either N or A,B -->
   <!ATTLIST for dim                  CDATA        #IMPLIED>

<!ELEMENT printVar EMPTY >
   <!--  Key identifying variable to print -->
   <!ATTLIST printVar  key                CDATA        #REQUIRED>
   <!ATTLIST printVar  split              CDATA        #IMPLIED>

<!ELEMENT break EMPTY >
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST break condition           CDATA        #IMPLIED>

<!ELEMENT continue EMPTY >

<!ENTITY % if_clause_items "%general_items;|%structure_items;|break" >

<!ELEMENT if ( (%if_clause_items;)+, (else_if, (%if_clause_items;)+)*, (else, (%if_clause_items;)+)?) >
   <!-- Condition evaluated during parsing that enables processing of remaining children (up to else/else_if) -->
   <!ATTLIST if condition             CDATA        #REQUIRED>

<!ELEMENT else EMPTY >

<!ELEMENT else_if EMPTY >
   <!-- Condition evaluated during parsing that enables processing of remaining children (up to else/else_if) -->
   <!ATTLIST else_if condition             CDATA        #REQUIRED>

<!-- This is a deferred evaluation expression -->
<!ELEMENT variable EMPTY>
   <!ATTLIST variable  key                CDATA        #REQUIRED>
   <!ATTLIST variable  name               CDATA        #IMPLIED>
   <!ATTLIST variable  type         (String|Boolean|Long|Float) #REQUIRED>
   <!ATTLIST variable  expression         CDATA        #REQUIRED>
   <!-- Immediately evaluated expression used to guard creating this item -->
   <!ATTLIST variable  condition          CDATA        #IMPLIED>

<!ELEMENT graphic ((%graphic_items;)*) >
   <!ATTLIST graphic  key                CDATA        #REQUIRED>
   <!ATTLIST graphic  var                CDATA        #IMPLIED>
   <!ATTLIST graphic  description        CDATA        #IMPLIED>
   <!ATTLIST graphic  toolTip            CDATA        #IMPLIED>
   <!ATTLIST graphic  condition          CDATA        #IMPLIED>
   <!ATTLIST graphic  clockConfigIndex   CDATA        #IMPLIED>
   
<!ELEMENT graphicGroup ((%graphic_items;)*) >
   <!ATTLIST graphicGroup  x                CDATA        #IMPLIED>
   <!ATTLIST graphicGroup  y                CDATA        #IMPLIED>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST graphicGroup  condition        CDATA        #IMPLIED>

<!ELEMENT graphicBox ((%graphic_items;)*) >
   <!ATTLIST graphicBox  id               CDATA        #IMPLIED>
   <!ATTLIST graphicBox  x                CDATA        #REQUIRED>
   <!ATTLIST graphicBox  y                CDATA        #REQUIRED>
   <!ATTLIST graphicBox  params           CDATA        #REQUIRED>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST graphicBox  condition        CDATA        #IMPLIED>

<!ELEMENT graphicItem EMPTY >
   <!ATTLIST graphicItem  id              CDATA        #IMPLIED>
   <!ATTLIST graphicItem  name            CDATA        #IMPLIED>
   <!ATTLIST graphicItem  type            CDATA        #REQUIRED>
   <!ATTLIST graphicItem  params          CDATA        #REQUIRED>
   <!ATTLIST graphicItem  var             CDATA        #IMPLIED>
   <!ATTLIST graphicItem  edit            CDATA        #IMPLIED>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST graphicItem  condition       CDATA        #IMPLIED>

<!ELEMENT aliasCategoryOption ((%general_items;)*) >
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST aliasCategoryOption  condition    CDATA        #IMPLIED>
   <!ATTLIST aliasCategoryOption  name         CDATA        #IMPLIED>
   <!-- Key for option - also used as visible name if not provided -->
   <!ATTLIST aliasCategoryOption  key          CDATA        #REQUIRED>
   <!ATTLIST aliasCategoryOption  derived      (false|true) #IMPLIED>
   <!-- Locks option in GUI -->
   <!ATTLIST aliasCategoryOption  locked       (false|true) "true">

<!-- Expandable grouping -->
<!ELEMENT category ((%general_items;)*) >
   <!-- Locks option in GUI -->
   <!ATTLIST category  locked       (false|true) #IMPLIED>
   <!ATTLIST category  xmlns:xi     CDATA        #IMPLIED>
   <!ATTLIST category  name         CDATA        #IMPLIED>
   <!-- Description visible in GUI -->
   <!ATTLIST category  description  CDATA        #IMPLIED>
   <!ATTLIST category  toolTip      CDATA        #IMPLIED>
   <!ATTLIST category  derived      (false|true) #IMPLIED>
   <!ATTLIST category  hidden       (false|true) #IMPLIED>

<!-- Expandable grouping with associated variable -->
<!ELEMENT categoryOption  ((%structure_items;|%general_items;)*) >
   <!-- Key for option - also used as visible name if not provided -->
   <!ATTLIST categoryOption key                 CDATA        #REQUIRED>
   <!-- Description  of variable -->
   <!ATTLIST categoryOption description         CDATA        #REQUIRED>
   <!-- Tool-tip to display in GUI and used for documentation in C++ code -->
   <!ATTLIST categoryOption toolTip             CDATA        #IMPLIED>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST categoryOption condition           CDATA        #IMPLIED>
   <!-- Locks option in GUI -->
   <!ATTLIST categoryOption locked              (false|true) #IMPLIED>
   <!-- Hides option in GUI -->
   <!ATTLIST categoryOption hidden              CDATA        #IMPLIED>
   <!-- Expression enables this option -->
   <!ATTLIST categoryOption enabledBy           CDATA        #IMPLIED> 
   <!-- Dynamic expression that disables and hides this option -->
   <!ATTLIST categoryOption hiddenBy            CDATA        #IMPLIED>
   <!-- Initial value (and default) for option -->
   <!ATTLIST categoryOption  value              CDATA        #IMPLIED>
   <!-- Disabled value for option -->
   <!ATTLIST categoryOption  disabledValue      CDATA        #IMPLIED>
   <!-- Include another XML file -->
   <!ATTLIST categoryOption  xmlns:xi           CDATA        #IMPLIED>

<!ELEMENT title EMPTY >
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST title condition              CDATA        #IMPLIED>
   <!-- Visible name of title-->
   <!ATTLIST title name                   CDATA        #IMPLIED>
   <!-- Tool-tip visible in GUI and used for documentation in C++ code  -->
   <!ATTLIST title toolTip                CDATA        #IMPLIED>
   <!-- Description visible in GUI -->
   <!ATTLIST title description            CDATA        #IMPLIED>
   <!-- Dynamic expression that hides the title -->
   <!ATTLIST title hiddenBy               CDATA        #IMPLIED>

<!-- This is an immediate value expression.  The value is assumed to be
     a literal string unless the attribute is force evaluated by prefixing with '=' 
-->
<!ELEMENT equation EMPTY >
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST equation  condition       CDATA        #IMPLIED>
   <!-- Unique key -->
   <!ATTLIST equation  key             CDATA        #REQUIRED>
   <!-- Value expressed as equation for immediate evaluation?? -->
   <!ATTLIST equation  value           CDATA        #REQUIRED>



<!ELEMENT deleteVariables EMPTY >
   <!-- Key for variable to delete -->
   <!ATTLIST deleteVariables variables      CDATA        #REQUIRED>
   <!-- May be used to disable the check for existence that is done before deleting -->
   <!ATTLIST deleteVariables mustExist     (false)      #IMPLIED>

<!ELEMENT aliasOption EMPTY >
   <!-- Allows reference to an option (possibly) in another file -->
   <!ATTLIST aliasOption key               CDATA        #REQUIRED>
   <!-- Optional name in GUI otherwise derived from key -->
   <!ATTLIST aliasOption name              CDATA        #IMPLIED>
   <!-- Description for GUI and code generation -->
   <!ATTLIST aliasOption description       CDATA        #IMPLIED>
   <!-- Tooltip for GUI and code generation -->
   <!ATTLIST aliasOption toolTip           CDATA        #IMPLIED>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST aliasOption condition        CDATA         #IMPLIED>
   <!-- Allows aliased variable to be altered by user (unless locked) -->
   <!ATTLIST aliasOption locked           (false)       #IMPLIED>
   <!-- Hides option in GUI -->
   <!ATTLIST aliasOption hidden           (true)        #IMPLIED>
   
   <!-- Indicates requirement for existence of variable 
        (true=may not exist but keep, required=must exist, discard=discard immediately if non-existent)-->
   <!ATTLIST aliasOption optional         (true|required|discard)  #IMPLIED>

<!ELEMENT timeOption EMPTY >
   <!-- Visible name of option - also used for key if not provided -->
   <!ATTLIST timeOption name          CDATA        #IMPLIED>
   <!-- Key for option - also used as visible name if not provided -->
   <!ATTLIST timeOption key           CDATA        #REQUIRED>
   <!-- Origin of this option's value. Visible in GUI as part of tool-tip -->
   <!ATTLIST timeOption origin        CDATA        #IMPLIED>
   <!-- Description of option visible in GUI and used for documentation in C++ code -->
   <!ATTLIST timeOption description   CDATA        #IMPLIED>
   <!-- Tool-tip visble in GUI and used for documentation in C++ code  -->
   <!ATTLIST timeOption toolTip       CDATA        #IMPLIED>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST timeOption condition     CDATA        #IMPLIED>
   <!-- Expression enables this option -->
   <!ATTLIST timeOption enabledBy     CDATA        #IMPLIED> 
   <!-- Dynamic expression that disables and hides this option -->
   <!ATTLIST timeOption hiddenBy      CDATA        #IMPLIED>
   <!-- Unlocked by an expression -->
   <!ATTLIST timeOption unlockedBy    CDATA        #IMPLIED> 
   <!-- How to format a raw value e.g. 'MCM_PLACR_DFCS(%s),MCM_PLACR_EFDS(%s)' or '%s_s' -->
   <!ATTLIST timeOption valueFormat   CDATA        #IMPLIED> 

   <!-- Type for float e.g. Seconds & -->
   <!ATTLIST timeOption typeName      CDATA        #IMPLIED>
   <!-- Equation that controls the tick value for variable -->
   <!ATTLIST timeOption ref           CDATA        #IMPLIED> 
   <!-- Allows this option to modify previous option of same key 
        The variable behind this option is shared -->
   <!ATTLIST timeOption modify        CDATA        #IMPLIED>
   <!-- Replace existing variable associated with option quietly -->
   <!ATTLIST timeOption replace       CDATA        #IMPLIED>
   <!-- Initial/default value -->
   <!ATTLIST timeOption value         CDATA        #IMPLIED>
   <!-- Value returned when disabled -->
   <!ATTLIST timeOption disabledValue CDATA        #IMPLIED>
   <!-- Minimum value (displayed value) -->
   <!ATTLIST timeOption min           CDATA        #IMPLIED>
   <!-- Maximum value (displayed value) -->
   <!ATTLIST timeOption max           CDATA        #IMPLIED>

   <!-- Indicates primary quantity for display -->
   <!ATTLIST timeOption units          (Hz|s|ticks) #REQUIRED>
   <!-- Equation that calculates the period from the variable primary value (only used if units = ticks) -->
   <!ATTLIST timeOption periodEquation  CDATA       #IMPLIED> 



<!ELEMENT intOption EMPTY >
   <!-- Visible name of option - also used for key if not provided -->
   <!ATTLIST intOption name          CDATA        #IMPLIED>
   <!-- Key for option - also used as visible name if not provided -->
   <!ATTLIST intOption key           CDATA        #REQUIRED>
   <!-- Origin of this option's value. Visible in GUI as part of tool-tip -->
   <!ATTLIST intOption origin        CDATA        #IMPLIED>
   <!-- Description of option visible in GUI and used for documentation in C++ code -->
   <!ATTLIST intOption description   CDATA        #IMPLIED>
   <!-- Tool-tip visble in GUI and used for documentation in C++ code  -->
   <!ATTLIST intOption toolTip       CDATA        #IMPLIED>
   <!-- Condition evaluated during parsing that enables processing of this option -->
   <!ATTLIST intOption condition     CDATA        #IMPLIED>
   <!-- Locks option in GUI -->
   <!ATTLIST intOption locked        (true)       #IMPLIED>
   <!-- Name of register -->
   <!ATTLIST intOption register      CDATA        #IMPLIED>
   <!-- Hides option in GUI -->
   <!ATTLIST intOption hidden        (true)       #IMPLIED>
   <!-- Option value is derived and should not be saved -->
   <!ATTLIST intOption derived       (true)       #IMPLIED>
   <!-- Expression enables this option -->
   <!ATTLIST intOption enabledBy     CDATA        #IMPLIED> 
   <!-- Dynamic expression that disables and hides this option -->
   <!ATTLIST intOption hiddenBy      CDATA        #IMPLIED>
   <!-- Unlocked by an expression -->
   <!ATTLIST intOption unlockedBy    CDATA        #IMPLIED> 
   <!-- How to format a raw value e.g. 'MCM_PLACR_DFCS(%s),MCM_PLACR_EFDS(%s)' or '%s_s' -->
   <!ATTLIST intOption valueFormat   CDATA        #IMPLIED> 
   <!-- Text to add to enum body generated from choices -->
   <!ATTLIST intOption enumText      CDATA        #IMPLIED>
   <!-- Equation that controls this variable -->
   <!ATTLIST intOption ref           CDATA        #IMPLIED> 
   <!-- Type for generated enum e.g. uint16_t - Also forces enum generation for ints, bitmasks -->
   <!ATTLIST intOption enumType      CDATA        #IMPLIED>
   <!-- C #if expression to guard enum declaration -->
   <!ATTLIST intOption enumGuard           CDATA        #IMPLIED>
   <!-- Type for int .e.g. Ticks & or name or enum wrapper -->
   <!ATTLIST intOption typeName      CDATA        #IMPLIED>
   <!-- Allows this option to modify previous option with the same key 
        The variable behind this option is shared -->
   <!ATTLIST intOption modify        CDATA        #IMPLIED>
   <!-- Replace existing variable associated with option quietly -->
   <!ATTLIST intOption replace       CDATA        #IMPLIED>
   <!ATTLIST intOption disabledValue CDATA        #IMPLIED>
   <!-- Initial/default value -->
   <!ATTLIST intOption value         CDATA        #IMPLIED>
   <!-- Unit to use for numeric value -->
   <!ATTLIST intOption units         (Hz|s|ticks|percent) #IMPLIED>
   <!ATTLIST intOption step          CDATA        "1">
   <!ATTLIST intOption errorPropagate (ok|info|warning|error)  #IMPLIED>
   <!-- Minimum value (displayed value) -->
   <!ATTLIST intOption min           CDATA        #IMPLIED>
   <!-- Maximum value (displayed value) -->
   <!ATTLIST intOption max           CDATA        #IMPLIED>
   <!-- Offset to translate from displayed value to substitution value -->
   <!ATTLIST intOption offset        CDATA        #IMPLIED>
   <!ATTLIST intOption derivedFrom   CDATA        #IMPLIED>
   <!ATTLIST intOption radix         CDATA        #IMPLIED>
   <!ATTLIST intOption isNamedClock  (true)       #IMPLIED>
   <!-- Comma separated list of accumulation variables to which this variable's name will be added -->
   <!ATTLIST intOption addToVar            CDATA        #IMPLIED>
   
  
<!ELEMENT bitmaskOption EMPTY >
   <!-- Visible name of option - also used for key if not provided -->
   <!ATTLIST bitmaskOption name           CDATA        #IMPLIED>
   <!-- Key for option - also used as visible name if not provided -->
   <!ATTLIST bitmaskOption key            CDATA        #REQUIRED>
