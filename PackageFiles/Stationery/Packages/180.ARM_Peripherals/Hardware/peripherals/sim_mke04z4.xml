   <constant key="/ACMP0/outputPinMap" type="String" value="&quot;PTA4&quot;" />

   <!-- Pin mapping for ACMP1 -->
   <constant key="/ACMP1/inputPinMap"  type="String" value="&quot;PTA6,PTA7,PTB4&quot;" />
   <constant key="/ACMP1/outputPinMap" type="String" value="&quot;PTB5&quot;" />

