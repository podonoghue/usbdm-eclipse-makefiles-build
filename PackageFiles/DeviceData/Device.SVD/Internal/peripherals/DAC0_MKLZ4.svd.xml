                     <bitWidth>1</bitWidth>
                  </field>
                  <field>
                     <name>DACBFRP</name>
                     <description>Buffer Read Pointer</description>
                     <bitOffset>4</bitOffset>
                     <bitWidth>1</bitWidth>
                  </field>
               </fields>
            </register>
         </registers>
