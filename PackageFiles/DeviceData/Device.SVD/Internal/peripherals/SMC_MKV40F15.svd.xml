                        <enumeratedValue>
                           <name>0b1</name>
                           <description>LPO clock is disabled in LLS/VLLSx</description>
                           <value>0b1</value>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
                  <field>
                     <name>RAM2PO</name>
